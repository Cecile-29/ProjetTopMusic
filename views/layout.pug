doctype html
html(lang="fr")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous")
        link(href="/assets/css/main.css" rel="stylesheet")
        
        title Projet Deezer APi
    body(data-bs-theme="dark") 
        nav.navbar.navbar-expand-lg.bg-body-tertiary
            .container
                a.navbar-brand(href="/")
                    img(src="/logo.png" alt="Test Deezer APi" width="60" height="50") 
                
                .collapse.navbar-collapse#navbarNavDropdown
                    ul.navbar-nav
                        li.nav-item
                            a.nav-link.active(aria-current="page" href="/") Accueil
                        if app.user && app.user.connected == true   
                            li.nav-item
                                a.nav-link.active(aria-current="page" href="/search") Chercher un artiste
                            li.nav-item
                                a.nav-link.active(aria-current="page" href="/deconnexion") Se d√©connecter                    
                        else
                            li.nav-item
                                a.nav-link.active(aria-current="page" href="/inscription") Inscription

                            li.nav-item
                                a.nav-link.active(aria-current="page" href="/connexion") Connexion



        - var messages = getMessages()
        if messages.notify
            each msg in messages.notify
                .alert.alert-success= msg
        if messages.error
            each msg in messages.error
                .alert.alert-danger= msg 

        block content

        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous")
        script(src=process.env.BROWSER_REFRESH_URL)