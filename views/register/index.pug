extends ../layout.pug

block content
    .container
        h1 Inscription 
        if error 
            alert.alert-danger #{error}
        form(action='/inscription' method="post")
                
            .input-group.mb-3
                .input-group-prepend
                    .input-group-text.d-none.d-lg-block
                        i.fa.fa-user
                input(type="text" class="form-control" placeholder="Pr√©nom" name="firstname")

            .input-group.mb-3
                .input-group-prepend
                    .input-group-text.d-none.d-lg-block
                        i.fa.fa-user
                input(type="text" class="form-control" placeholder="Nom" name="lastname")

            .input-group.mb-3
                .input-group-prepend
                    .input-group-text.d-none.d-lg-block
                        i.fa.fa-user
                input(type="email" class="form-control" placeholder="email" name="email")
    
            .input-group.mb-3
                .input-group-prepend
                    .input-group-text.d-none.d-lg-block 
                        i.fa.fa-lock
                input(type="password" class="form-control" placeholder="Mot de passe" name="password")
    
            hr
    
            .row.justify-content-center
                .col-2
                    button.btn.btn-primary(type="submit") Enregistrer